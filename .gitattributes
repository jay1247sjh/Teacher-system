# Auto detect text files and perform LF normalization
* text=auto

# Java sources
*.java text eol=lf
*.xml text eol=lf
*.properties text eol=lf

# Web sources
*.js text eol=lf
*.ts text eol=lf
*.vue text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.json text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Docker
Dockerfile text eol=lf
*.dockerignore text eol=lf

# Markdown
*.md text eol=lf

# Binary files
*.jar binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
